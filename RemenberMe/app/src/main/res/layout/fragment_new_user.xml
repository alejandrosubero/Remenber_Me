<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azul1"
    tools:context=".fragments.NewUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#686767"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/newItemTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:lineSpacingExtra="8sp"
                android:text="New User"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold|italic"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="end">


            <ImageView
                android:id="@+id/btn_ing_close"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_close_24"
                android:visibility="invisible"
                android:elevation="10dp"
                android:translationZ="10dp"
                android:clickable="true"
                />

        </LinearLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <androidx.cardview.widget.CardView
                android:id="@+id/itemSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="9dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="82dp"
                tools:layout_editor_absoluteY="408dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="User Name"
                        android:textColor="@color/black"
                        android:textStyle="italic" />


                    <EditText
                        android:id="@+id/userMail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="User Mail"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/userQuestion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="Question Segurity"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/userResponse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:hint="Question Response"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/userPass"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:hint="Passwork"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/keyPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:hint="Primary Key"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/keyShare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:hint="Share key"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textStyle="italic" />

                    <EditText
                        android:id="@+id/deleteKey"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:hint="Delete key"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textStyle="italic" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:cardBackgroundColor="@color/azul1"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="549dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSaveUser"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_margin="8dp"
                        android:textColor="@color/white"
                        android:text="Save User"
                        android:textStyle="bold"
                        android:backgroundTint="@color/black"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>








</LinearLayout>