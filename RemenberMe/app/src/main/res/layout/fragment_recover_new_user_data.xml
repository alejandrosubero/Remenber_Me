<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/azul1"
android:padding="10dp"
android:orientation="vertical"
tools:context=".fragments.user.RecoverNewUserDataFragment" >

<TextView
    android:id="@+id/NewUserDataTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sing Up"
    android:textColor="@color/white"
    android:textSize="30dp"
    android:textStyle="bold"
    android:gravity="center_horizontal"
    android:layout_marginBottom="60dp"
    android:layout_marginTop="150dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        <EditText
            android:id="@+id/campoNewUserData_1"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginRight="9dp"
            android:hint="Data"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:background="@drawable/edit_text_back"
            android:paddingLeft="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardeyes1"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="8dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="408dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/eyes1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_do_not_disturb_block_24"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <EditText
            android:id="@+id/campoNewUserData_2"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginRight="9dp"
            android:hint="Confir"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:background="@drawable/edit_text_back"
            android:paddingLeft="20dp" />



        <androidx.cardview.widget.CardView
            android:id="@+id/cardeyes2"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="8dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="408dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/eyes2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_do_not_disturb_block_24"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>



    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/campoNewUser_btn_1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textColor="@color/white"
            android:text="Login"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            />

    </LinearLayout>


</LinearLayout>

</LinearLayout>